<launch>
	<node name="stage" pkg="stage" type="stageros" args="$(find stage)/world/willow-erratic.world"/>
	<node name="occupancy_map" pkg="occupancy_map" type="occupancy_map_generator"/>
	<node name="qtviewer" pkg="qtviewer" type="qtviewer"/>
	
	<node respawn="true" pkg="joy" type="joy_node" name="joy" >
    		<param name="dev" type="string" value="/dev/input/js1" />
    		<param name="deadzone" value="0.12" />
  	</node>

	<param name="axis_linear" value="1" type="int"/>
	<param name="axis_angular" value="0" type="int"/>
  	<param name="scale_linear" value="2" type="double"/>
  	<param name="scale_angular" value="2" type="double"/>

	<node name="teleop_joy" pkg="teleop_joy" type="teleop_joy"/>

</launch>
